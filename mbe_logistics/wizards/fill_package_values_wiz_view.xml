<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="fill_package_values_wizard_view" model="ir.ui.view">
        <field name="name">Vista Formulario Wizard - Llenado de campos gastos del paquete</field>
        <field name="model">fill.package_values.wiz</field>
        <field name="type">form</field>
        <field name="arch" type="xml">
            <form string="Llenado de campos de los paquetes">
                <group name="fill_package_values">
                    <group name="expenses">
                        <field name="expenses"/>
                        <field name="custom_expenses"/>
                        <field name="other_expenses"/>
                    </group>
                </group>

                <footer>
                    <button name="action_fill_package_values" string="Llenar los valores" type="object" class="btn-primary"/>
                    <button special="cancel" string="Cancelar" class="oe_link"/>
                </footer>
            </form>
        </field>
    </record>

</odoo>
