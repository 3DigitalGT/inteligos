<odoo>
    <data>
        <record id="view_product_template_inherit" model="ir.ui.view">
            <field name="name">Herencia de la plantilla de producto</field>
            <field name="model">product.template</field>
            <field name="inherit_id" ref="product.product_template_only_form_view" />
            <field name="arch" type="xml">
                <field name="purchase_ok" position="after">
                    <field name="is_computer"/>
                </field>
            </field>
        </record>
    </data>

    <data>
        <record id="view_product_template_inherit" model="ir.ui.view">
            <field name="name">Herencia de la plantilla de producto</field>
            <field name="model">product.template</field>
            <field name="inherit_id" ref="product.product_template_form_view" />
            <field name="arch" type="xml">
                <xpath expr="//sheet/notebook/page[@name='purchase']" position="after">
                    <field name="is_computer" invisible="1"/>
                    <page string="Informacion Computo" attrs="{'invisible': [('is_computer','=',False)]}">
                        <group>
                            <group string="Procesador">
                                <field name="processor_type"/>
                                <field name="processor_gen" attrs="{'invisible': [('processor_type','=',False)]}"/>
                            </group>
                            <group string="Memoria RAM">
                                <field name="ram_type"/>
                                <field name="ram_capacity" attrs="{'invisible': [('ram_type','=',False)]}"/>
                            </group>
                        </group>
                    </page>
                </xpath>
            </field>
        </record>
    </data>
</odoo>